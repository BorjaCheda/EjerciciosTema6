<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %highlight{%level}
{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue} - %msg%n"/>
        </Console>
        <File name="File" fileName="logs/logs.log">
            <PatternLayout
                    pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %highlight{%level}
{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="Console" level="INFO"/>
            <AppenderRef ref="File" level="WARN"/>
        </Root>
    </Loggers>
</Configuration>